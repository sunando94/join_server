
@{
    ViewBag.Title = "Join-Login";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}
<style>
    header.navigation .logo {
        width: 17%;
    }
    main{
        height:50%;
    }
    .logotext {
        color: white;
        float: right;
        height: 20%; /* margin: 0 auto; */
        width: 50%;
        padding: 17px 0;
        font-size: 1.9em;
        font-weight: 100;
    }

    .content-container {
        position: inherit;
        height: 100%;
    }

    .demo-card-wide.mdl-card {
        width: 512px;
    }

    .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 176px;
        background: url('../assets/demos/welcome_card.jpg') center / cover;
    }

    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>

<div class="content-container">

    <main>
        <div class="demo-card-wide mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
                <h2 class="mdl-card__title-text">Login</h2>
            </div>
            <div class="mdl-card__supporting-text">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Mauris sagittis pellentesque lacus eleifend lacinia...
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Get Started
                </a>
            </div>
            <div class="mdl-card__menu">
                <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
                    <i class="material-icons">share</i>
                </button>
            </div>
        </div>

    </main>

   
    <footer class="footer" role="contentinfo">
        <div class="footer-table-cell">
            <div class="footer-links">
                <ul>
                    <li>
                        <h3 class="footer-header">Company</h3>
                    </li>
                    <li>
                        <a href="javascript:void(0)">About</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Support</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Blog</a>
                    </li>
                </ul>
                <ul>
                    <li>
                        <h3 class="footer-header">Find Us</h3>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Join for Android</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Twitter</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Facebook</a>
                    </li>
                </ul>
                <ul>
                    <li>
                        <h3 class="footer-header">Legal</h3>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Terms and Conditions</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">Privacy Policy</a>
                    </li>
                </ul>
            </div>
            <p class="footer-copyright footer-header">&copy; @DateTime.Now.Year JOIN</p>
        </div>
    </footer>
</div>